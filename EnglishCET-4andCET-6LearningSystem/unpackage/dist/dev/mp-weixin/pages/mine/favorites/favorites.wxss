
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.type-selector {
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  gap: 20rpx;
}
.type-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 40rpx;
}
.type-item.active {
  background-color: #4095E5;
}
.type-label {
  font-size: 28rpx;
  color: #666;
}
.type-item.active .type-label {
  color: #fff;
}
.favorite-list {
  height: calc(100vh - 200rpx);
}
.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
