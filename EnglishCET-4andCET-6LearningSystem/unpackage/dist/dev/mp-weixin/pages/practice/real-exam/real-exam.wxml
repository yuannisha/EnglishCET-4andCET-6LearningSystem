<view class="container"><view wx:if="{{a}}" class="ready-card"><view class="ready-title">真题练习</view><view class="ready-info"><text>练习时长：{{b}}分钟</text><text>题目数量：{{c}}题</text></view><button class="btn primary" bindtap="{{d}}">开始练习</button></view><view wx:elif="{{e}}" class="exam-content"><view class="exam-header"><text class="progress">{{f}}/{{g}}</text><text class="timer">{{h}}</text></view><view wx:if="{{i}}" class="question-card"><view class="question-title">{{j}}</view><view class="options"><view wx:for="{{k}}" wx:for-item="option" wx:key="c" class="{{['option-item', option.d && 'active']}}" bindtap="{{option.e}}"><text class="option-key">{{option.a}}</text><text class="option-content">{{option.b}}</text></view></view></view><view class="exam-footer"><button class="btn" bindtap="{{l}}">上一题</button><button class="btn" bindtap="{{m}}">下一题</button><button class="btn primary" bindtap="{{n}}">完成练习</button></view></view><view wx:else class="result-card"><view class="result-title">练习结束</view><view class="result-info"><text>用时：{{o}}秒</text><text>得分：{{p}}</text></view><view wx:if="{{q}}" class="analysis-section"><view class="analysis-title">题目解析</view><view class="question-list"><view wx:for="{{r}}" wx:for-item="question" wx:key="g" class="question-item"><view class="question-header"><text class="question-number">第{{question.a}}题</text><text class="{{['answer-status', question.c]}}">{{question.b}}</text></view><view class="question-content">{{question.d}}</view><view class="correct-answer">正确答案：{{question.e}}</view><view class="analysis-content">{{question.f}}</view></view></view></view><button class="btn primary" bindtap="{{s}}">返回</button></view></view>